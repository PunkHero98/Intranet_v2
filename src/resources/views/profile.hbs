<!-- profile intranet -->
<div class="container-fluid">
  <section class="section profile">
    <div class="row">
      <div class="col-xl-4 col-md-4 col-sm-12">
        <div class="card border-0">
          <div
            class="card-body profile-card pt-4 d-flex flex-column align-items-center w-100"
          >
            <img src="/imgs/user/user.png" alt="Profile" class="rounded-circle profile-picture" />
            <div class="pt-2">
              {{!-- <label class="btn btn-primary btn-sm">View</label> --}}
              <label
                for="Upload"
                class="btn btn-primary btn-sm change-pictureBtn"
              >Change Picture</label>
              <input
                type="file"
                accept="image/jpeg , image/png , image/jpg , image/webp , image/heif , image/svg"
                id="Upload"
                name="Imgfiles"
                hidden
              />
              {{!-- <label class="btn btn-primary btn-sm">Change Password</label> --}}
            </div>
            <h2 class="text-center">{{result.fullname}}</h2>
            <h3>{{result.position}}</h3>
          </div>
        </div>
      </div>

      <div class="col-xl-8 col-md-8 col-sm-12">
        <div class="card border-0">
          <div class="card-body pt-2 info-card">
            <ul class="nav nav-tabs nav-tabs-bordered">
              <li class="nav-item">
                <button
                  class="nav-link active text-black fw-bold border-none"
                  data-bs-toggle="tab"
                  data-bs-target="#profile-overview"
                >
                  Overview
                </button>
              </li>
              <li class="nav-item">
                <button
                  class="nav-link text-black fw-bold border-none"
                  data-bs-toggle="tab"
                  data-bs-target="#profile-edit"
                >
                  Edit About
                </button>
              </li>
            </ul>

            <div class="tab-content pt-2">
              <div
                class="tab-pane fade show active profile-overview"
                id="profile-overview"
              >
                <h5>About</h5>
                <p class="fst-italic">...</p>

                <h5>Profile Details</h5>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Full Name</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.fullname}}</div>
                </div>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Department</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.department}}</div>
                </div>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Position</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.position}}</div>
                </div>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Bussiness Address</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.user_address}}</div>
                </div>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Address</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.user_working_site}}</div>
                </div>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Office Contact</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.office_phone_number}}</div>
                </div>
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Email</div>
                  <div
                    class="col-lg-9 col-md-8 col-sm-8 col-6"
                  >{{result.email}}</div>
                </div>
                {{!-- <div class="row">
                  <div
                    class="col-lg-3 col-md-4 col-sm-4 col-6 fw-bold text-black"
                  >Last Updated</div>
                  <div class="col-lg-9 col-md-8 col-sm-8 col-6">2024-11-26
                    12:09:55</div>
                </div> --}}
              </div>

              <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                <form>
                  <div class="row mb-3">
                    <label for="first-Q" class="mb-3 fw-bold text-black">Some
                      interesting facts about you?</label>
                    <div class="">
                      <textarea
                        name="first-Q"
                        class="form-control"
                        id="first-Q"
                      ></textarea>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="second-Q" class="mb-3 fw-bold text-black">What
                      motivates you to come to work every morning or What is the
                      most interesting thing/highlight so far in your role?</label>
                    <div class="">
                      <textarea
                        name="second-Q"
                        class="form-control"
                        id="second-Q"
                      ></textarea>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="third-Q" class="mb-3 fw-bold text-black">What
                      are you hoping to achieve in your regional role in QSL?</label>
                    <div class="">
                      <textarea
                        name="third-Q"
                        class="form-control"
                        id="third-Q"
                      ></textarea>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="fourth-Q" class="mb-3 fw-bold text-black">What
                      are your outside-of-QSL recent professional/personal
                      achievements?</label>
                    <div class="">
                      <textarea
                        name="fourth-Q"
                        class="form-control"
                        id="fourth-Q"
                      ></textarea>
                    </div>
                  </div>
                  <div class="text-center">
                    <button
                      type="submit"
                      class="btn btn-primary text-white border-none"
                    >Save Changes</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>