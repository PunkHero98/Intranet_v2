<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Intranet</title>

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Playwrite+ES&family=Playwrite+GB+J:ital@1&family=Playwrite+US+Trad&display=swap"
    rel="stylesheet">
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

  <!-- Quill CSS -->
  {{!-- <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> --}}
  <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link href="/css/app.css" rel="stylesheet">

  <!-- jQuery UI CSS (if needed) -->
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body>
  <div class="app">
    
    {{#compare role 'Member'}}
      {{> headerForMem}}
    {{/compare}}
    
    {{#compare role 'HR'}}
      {{> headerForPost}}
    {{/compare}}
    
    {{#compare role 'Admin'}}
      {{> header}}
    {{/compare}}
  

    <main>
      {{{body}}}

      
      {{#compare role 'HR'}}
        <button type="button" class="btn add-Btn text-white position-fixed translate-middle colorful-border-button border-0"
          onclick="window.location.href='/content/add-news'">
          <i class="fa-solid fa-circle-plus"></i> Add News
        </button>
      {{/compare}}
      
      {{#compare role 'Admin'}}
        <button type="button" class="btn add-Btn text-white position-fixed translate-middle colorful-border-button border-0"
          onclick="window.location.href='/content/add-news'">
          <i class="fa-solid fa-circle-plus"></i> Add News
        </button>
      {{/compare}}
    </main>

    {{> footer}}
  </div>


  <!-- Loader -->
  <div class="loader">
    <div class="d-flex justify-content-center">
      <div class="spinner-border"></div>
      <div class="m-0">Loading...</div>
    </div>
  </div>

  <!-- Alert -->
  <div class="alert-intranet alert alert-success alert-dismissible" role="alert">
    <strong>Success!</strong><span>The page will be refresh in 3 seconds.</span>
    {{!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> --}}
  </div>

  <!-- Scripts at the end for better performance -->

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- jQuery UI (if needed) -->
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

  <!-- Quill Editor -->
  <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>

  <!-- Popper.js (for Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

  <!-- Custom JS -->
  {{!-- <script src="/js/index.js"></script> --}}

  {{#if isLoginPage}}
    <script src="/js/login.js"></script>
  {{/if}}

  {{#if isAddNew}}
    <script src="/js/addNew.js"></script>
    <script>
    const quill = new Quill("#quill-editor-content", {
      theme: "snow",
      placeholder: "Write something..",
      modules: {
        toolbar: [
          ["bold", "italic", "underline"],
          [{ "align": [] }, { "color": [] }, { "background": [] }],
          [{ "indent": "-1" }, { "indent": "+1" }],
          ["clean"]
        ],
      },
    });

    quill.root.addEventListener('paste', function(event) {
      event.preventDefault();
      const pastedText = event.clipboardData.getData('text');
      const range = quill.getSelection();

      if (range) {
        quill.formatText(0, pastedText.length, 'background', false);
      }
    });
  </script>
    
  {{/if}}

  {{#if isActiviyPage}}
    <script src="/js/activity.js"></script>
  {{/if}}

  {{#if isHomePage}}
    <script src="/js/homepage.js"></script>
  {{/if}}

  {{#if isManageContent}}
    <script src="/js/manageContent.js"></script>
  {{/if}}

  {{#if isManageUser}}
    <script src="/js/manageUser.js"></script>
  {{/if}}

  {{#if isRegister}}
    <script src="/js/register.js"></script>
  {{/if}}

  {{#if isContentView}}
    <script src="/js/contentView.js"></script>
  {{/if}}

  {{#if isProfile}}
    <script src="/js/profile.js"></script>
  {{/if}}

  <!-- Initialize Quill -->
  
</body>

</html>