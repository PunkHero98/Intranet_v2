<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Intranet</title>

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Playwrite+ES&family=Playwrite+GB+J:ital@1&family=Playwrite+US+Trad&display=swap"
    rel="stylesheet">
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

  <!-- Quill CSS -->
  {{!-- <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> --}}
  <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet">

  
  <!-- jQuery UI CSS (if needed) -->
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  {{!-- light gallery CSS --}}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/css/lightgallery-bundle.min.css" />

  <!-- Custom Styles -->
  <link href="/css/app.css" rel="stylesheet">

</head>

<body>
  <div class="app">
    
    {{#compare role 'Member'}}
      {{> headerForMem}}
    {{/compare}}
    
    {{#compare role 'HR'}}
      {{> headerForPost}}
    {{/compare}}
    
    {{#compare role 'Admin'}}
      {{> header}}
    {{/compare}}
  

    <main>
      {{{body}}}

      
      {{#compare role 'HR'}}
        <button type="button" class="btn add-Btn text-white position-fixed translate-middle colorful-border-button border-0"
          onclick="window.location.href='/content/add-news'">
          <i class="fa-solid fa-circle-plus icon-plus"></i> Add News
        </button>
      {{/compare}}
      
      {{#compare role 'Admin'}}
        <button type="button" class="btn add-Btn text-white position-fixed translate-middle colorful-border-button border-0"
          onclick="window.location.href='/content/add-news'">
          <i class="fa-solid fa-circle-plus icon-plus"></i> Add News
        </button>
      {{/compare}}

        <button type="button" class="btn feedBackBtn text-white position-fixed  translate-middle border-0" 
        data-bs-toggle="modal" data-bs-target="#feedBackModal" data-bs-whatever="@fat">
          <i class="fa-solid fa-comments"></i> Feedback
        </button>
    </main>

    {{> footer}}
  </div>
  <div class="modal fade" id="feedBackModal" tabindex="-1" aria-labelledby="feedBackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="feedBackModalLabel">FeedBack Form</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form>
            <div class="mb-3">
              <label for="feedback-category" class="col-form-label">Feedback Category</label>
              <select class="form-select" id="feedback-category">
                <option value="ui">UI</option>
                <option value="ux">Interaction</option>
                <option value="performance">Performance</option>
                <option value="bug">Bug Report</option>
                <option value="improvement">Improvement Suggestion</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="message-text" class="col-form-label">Message</label>
              <textarea class="form-control" id="message-text" rows="4" placeholder="Write your feedback here..."></textarea>
            </div>

            <div class="mb-3">
              <button type="button" class="btn btn-outline-success fbAddPic" id="fbAddPic">
                <i class="fa-solid fa-plus"></i> Add more pictures
              </button>
              <input
                accept="image/jpeg, image/png, image/jpg, image/webp, image/heif, image/svg"
                style="display: none;"
                type="file"
                id="fbAddPicInput"
                name="feedback_images"
                multiple
              />
            </div>
            <div class="mb-3 image_container d-flex flex-wrap gap-2"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Send Feedback</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Loader -->
  <div class="loader">
    <div class="d-flex justify-content-center">
      <div class="spinner-border"></div>
      <div class="m-0">Loading...</div>
    </div>
  </div>

  <!-- Alert -->
  <div class="alert-intranet alert alert-success alert-dismissible" role="alert">
    <strong>Success!</strong><span>The page will be refresh in 3 seconds.</span>
    {{!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> --}}
  </div>

  <!-- Scripts at the end for better performance -->

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- jQuery UI (if needed) -->
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

  <!-- Quill Editor -->
  <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>

  <!-- Popper.js (for Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/lightgallery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/plugins/zoom/lg-zoom.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/plugins/thumbnail/lg-thumbnail.min.js"></script>
  
  <!-- SheetJS for Excel -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
  <!-- PDF.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>

  <!-- Custom JS -->
  {{!-- <script src="/js/index.js"></script> --}}

  
  <script src="/js/main.js"></script>

  {{#if isLoginPage}}
    <script src="/js/login.js"></script>
  {{/if}}

  {{#if isAddNew}}
    <script src="/js/addNew.js"></script>
    <script>
    const quill = new Quill("#quill-editor-content", {
      theme: "snow",
      placeholder: "Write something..",
      modules: {
        toolbar: [
          ["bold", "italic", "underline"],
          [{ "align": [] }, { "color": [] }, { "background": [] }],
          [{ "indent": "-1" }, { "indent": "+1" }],
          ["clean"]
        ],
      },
    });

    quill.root.addEventListener('paste', function(event) {
      event.preventDefault();
      const pastedText = event.clipboardData.getData('text');
      const range = quill.getSelection();

      if (range) {
        quill.formatText(0, pastedText.length, 'background', false);
      }
    });
  </script>
    
  {{/if}}

  {{#if isActiviyPage}}
    <script src="/js/activity.js"></script>
  {{/if}}

  {{#if isHomePage}}
    <script src="/js/homepage.js"></script>
  {{/if}}

  {{#if isManageContent}}
    <script src="/js/manageContent.js"></script>
  {{/if}}

  {{#if isManageUser}}
    <script src="/js/manageUser.js"></script>
  {{/if}}

  {{#if isRegister}}
    <script src="/js/register.js"></script>
  {{/if}}

  {{#if isContentView}}
    <script src="/js/contentView.js"></script>
  {{/if}}

  {{#if isProfile}}
    <script src="/js/profile.js"></script>
  {{/if}}

  {{#if isManageFeedback}}
    <script src="/js/feedback.js"></script>
  {{/if}}
  <!-- Initialize Quill -->
  
</body>

</html>