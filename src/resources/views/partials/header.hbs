<!-- header intranet -->
<div
  class="header-intranet container-fluid fixed-top d-flex align-items-center bg-white"
>
  <!-- logo QSL -->
  <a class="logo" onclick="window.location.href='/homepage'">
    <img src="/imgs/qsl-logo.png" alt="logo-QSL" />
  </a>

  <!-- navbar -->
  <nav class="navbar navbar-expand-md ms-auto fw-bold p-0">
    <!-- toggler -->
    <button
      class="navbar-toggler p-0 border-0"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasNavbar"
      aria-controls="offcanvasNavbar"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon text-black"></span>
    </button>

    <!-- navbar offcanvas -->
    <div
      class="offcanvas offcanvas-end"
      id="offcanvasNavbar"
      tabindex="-1"
      aria-labelledby="offcanvasNavbarLabel"
    >

      <!-- close button -->
      <div class="offcanvas-header">
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>

      <div class="offcanvas-body">
        <ul class="navbar-nav countries">
            <li class="nav-item mx-1">
                <form class="d-flex h-100" action="/activities" method="post">
                    <button class="fw-bold {{#if (eq site 'Home')}}active{{/if}}" name="site" value="Home">Home</button>
                </form>
            </li>

            <li class="nav-item mx-1 ">
                <form class="d-flex h-100" action="/activities" method="post">
                    <button class="fw-bold {{#if (eq site 'Australia')}}active{{/if}}" name="site" value="Australia">Australia</button>
                </form>
            </li>

            <li class="nav-item mx-1 ">
                <form class="d-flex h-100" action="/activities" method="post">
                    <button class="fw-bold {{#if (eq site 'NewZealand')}}active{{/if}}" name="site" value="NewZealand">New Zealand</button>
                </form>
            </li>

            <li class="nav-item mx-1 ">
                <form class="d-flex h-100" action="/activities" method="post">
                    <button class="fw-bold {{#if (eq site 'Thailand')}}active{{/if}}" name="site" value="Thailand">Thailand</button>
                </form>
            </li>

            <li class="nav-item mx-1 ">
                <form class="d-flex h-100" action="/activities" method="post">
                    <button class="fw-bold {{#if (eq site 'Vietnam')}}active{{/if}}" name="site" value="Vietnam">Vietnam</button>
                </form>
            </li>

            <li class="nav-item mx-1 ">
                <form class="d-flex h-100" action="/activities" method="post">
                    <button class="fw-bold {{#if (eq site 'Philippines')}}active{{/if}}" name="site" value="Philippines">Philippines</button>
                </form>
            </li>
        </ul>


        <ul class="navbar-nav user">
          <li class="nav-item dropdown d-flex mx-1">
            <!-- user avatar -->
            {{! <img class="rounded-circle object-fit-cover" src="" /> }}

            <!-- user name -->
            <a
              class="nav-link nav-profile dropdown-toggle d-flex align-items-center text-reset p-0"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <span class="ps-2">{{username}}</span>
            </a>
            <ul
              class="dropdown-menu dropdown-menu-end dropdown-menu-arrow border-0 rounded-0"
            >
              <!-- full name and role -->
              <li class="dropdown-header text-black text-center">
                {{#if username}}
                  <h6>{{fullname}}</h6>
                  <span>{{role}}</span>
                {{/if}}
              </li>
              <li>
                <hr class="dropdown-divider m-0" />
              </li>

              <!-- my profile -->
              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  onclick="window.location.href='/profile'"
                >
                  <i class="fa-regular fa-user text-center"></i>
                  <span>My Profile</span>
                </a>
              </li>

              <!-- manage posts -->
              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  onclick="window.location.href='/manage'"
                >
                  <i class="fa-solid fa-list-check text-center"></i>
                  <span>Manage Posts</span>
                </a>
              </li>

              <!-- manage users -->
              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  onclick="window.location.href='/manage/user'"
                >
                  <i class="fa-solid fa-users text-center"></i>
                  <span>Manage Users</span>
                </a>
              </li>
              <li>
                <hr class="dropdown-divider m-0" />
              </li>

              <!-- sign out -->
              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  onclick="window.location.href='/logout'"
                >
                  <i
                    class="fa-solid fa-arrow-right-from-bracket text-center"
                  ></i>
                  <span>Sign Out</span>
                </a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>