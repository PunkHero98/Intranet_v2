<!-- create-content-intranet -->
<div class="create-content-intranet">
  <div class="content-container m-0 p-0">

    <div class="create-content-box">
      <div class="backButton ms-4">
        <i class="fa-solid fa-left-long"></i>
      </div>
      <form id="uploadform">
        <div class="first-row">
          <label class="fw-bold" for="title-input">Title</label>
          <input
            class="input-box border-0"
            type="text"
            name="title"
            id="title-input"
            placeholder="Enter your content title.."
          />
        </div>

        <div class="third-row">
          <label class="fw-bold" for="content-area">Content</label>
          <div id="quill-editor-content" class="bg-white">
            <textarea
              class="input-box border-0"
              name="text_content"
              id="content-area"
              placeholder="Write something.."
            ></textarea>
          </div>
        </div>

        <div class="fourth-row">
          <label class="fw-bold">Upload</label>
          <label class="fw-bold bg-dark-subtle" for="Upload"><i
              class="fa-solid fa-image"
            ></i>
            Choose Pictures</label>
          <label class="fw-bold bg-dark-subtle" for="uploadFile"><i
              class="fa-solid fa-file"
            ></i>
            Attach Files</label>
          <label class="clearBtn fw-bold bg-dark-subtle"><i
              class="fa-solid fa-delete-left"
            ></i>
            Clear All</label>
          <input
            type="file"
            accept="image/jpeg , image/png , image/jpg , image/webp , image/heif , image/svg"
            id="Upload"
            name="Imgfiles"
            hidden
            multiple
          />
          <input type="file" id="uploadFile" accept=".pdf, .doc, .docx, .xls, .xlsx, .ppt, .pptx, .txt" name="files" hidden multiple/>
          <div class="file-container d-flex flex-wrap gap-2 mt-1">
          </div>
          <div class="img-container d-flex flex-wrap mt-1">
          </div>
        </div>

        <div class="last-row text-center">
          <input type="button" class="fw-bold cancelButton" value="Cancel" />
          <input class="fw-bold" type="button" value="Review" />
          <input
            class="fw-bold text-white"
            type="submit"
            value="Submit"
            id="submit-btn"
          />
        </div>
      </form>
    </div>
  </div>
</div>

<div class="review-content-intranet bg-white">
  <div class="view-content-intranet">
    <div class="row justify-content-center m-0">
      <div class="col-12 bg-white content-view">
        <div class="d-flex justify-content-end">
          <button
            type="button"
            class="btn btn-outline-danger closeBtn rounded-0 m-0"
          >
            <i class="fa-solid fa-x text-black"></i>
          </button>
        </div>

        <div class="slideshow-container position-relative">
          <a
            class="prev text-decoration-none text-body-tertiary fw-bold"
            onclick="plusSlides1(-1)"
          >&#10094;</a>
          <a
            class="next text-decoration-none text-body-tertiary fw-bold"
            onclick="plusSlides1(1)"
          >&#10095;</a>
        </div>

        <div class="text-center"></div>
        <h5></h5>
        <div class="content_area_for_review"></div>
      </div>
    </div>
  </div>
</div>