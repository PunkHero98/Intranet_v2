<!-- login intranet -->
<div class="login-intranet container-fluid">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
      <!-- logo QSL -->
      <img class="mb-2" src="imgs/qsl-logo.png" alt="logo-QSL" />

      <!-- form login -->
      <form id="loginForm" action="/login" method="post">
        <!-- email -->
        <div class="form-floating mt-3">
          <input class="form-control" id="inputEmail" type="email" placeholder="" name="emailAddress" />
          <label for="inputEmail">Email address
            <span class="text-danger">*</span>
          </label>
          <!-- alert error email -->
          <div class="alert m-0 p-0">
            <p class="emailalert mx-2 text-danger fst-italic text-end" for="alert-error-email">Enter email</p>
          </div>
        </div>

        <!-- password -->
        <div class="form-floating mt-1">
          <input class="form-control" id="inputPassword" type="password" placeholder="" name="password" />
          <label for="inputPassword">Password
            <span class="text-danger">*</span>
          </label>
          <!-- alert error password -->
          <div class="alert m-0 p-0">
            <p class="passwordalert mx-2 text-danger fst-italic text-end" for="alert-error-email">Enter password</p>
          </div>
        </div>

        <div class="d-flex justify-content-between mt-1">
          <!-- remember me -->
          <div class="form-check">
            <input class="form-check-input" id="inputRememberMe" type="checkbox" value="" />
            <label class="form-check-label">Remember me</label>
          </div>

          <!-- show password -->
          <div class="form-check">
            <input class="form-check-input" id="inputShowPassword" type="checkbox" value="" />
            <label class="form-check-label">Show password</label>
          </div>
        </div>

        <!-- login button -->
        <div class="login text-center mt-2 pt-2">
          <input class="btn btn-primary btn-lg" id="submitbtn" type="submit" value="LOGIN" />
        </div>

        <!-- sign up -->
        <div class="sign-up text-center">
          <a class="text-black fw-bold" onclick="window.location.href='/register'">Sign Up
          </a>
        </div>
      </form>
    </div>
  </div>
</div>