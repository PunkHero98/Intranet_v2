<!-- login intranet -->
<div class="login-intranet container-fluid">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
      <!-- logo QSL -->
      <img class="mb-2" src="imgs/qsl-logo.png" alt="logo-QSL" />

      <!-- form login -->
      <form id="loginForm" action="/login" method="post">
        <!-- email -->

        <div class="mt-3">
          <label class="form-label fw-bold">Email address
            <span class="text-danger">*</span></label>
          <div class="input-group">
            <input
              type="email"
              id="inputEmail"
              class="form-control border-white"
              name="password"
              autocomplete="new-password"
            />
            <button
              tabindex="-1"
              class="btn btn-light"
              type="button"
              id="button-addon1"
            ></button>
          </div>
          <!-- alert error email -->
          <div class="alert m-0 p-0">
            <p
              class="passwordalert mx-2 my-0 text-danger fst-italic text-end fw-light"
              for="alert-error-email"
            >Enter password
            </p>
          </div>
        </div>

        <!-- password -->

        <div class="">
          <label class="form-label fw-bold">Password
            <span class="text-danger">*</span></label>
          <div class="input-group">
            <input
              type="password"
              id="inputPassword"
              class="form-control border-white"
              name="password"
              autocomplete="new-password"
            />
            <button
              tabindex="-1"
              type="button"
              id="inputShowPassword"
              class="btn btn-light"
            ><i class="fa-regular fa-eye-slash"></i></button>
          </div>
          <!-- alert error email -->
          <div class="alert m-0 p-0">
            <p
              class="passwordalert mx-2 my-0 text-danger fst-italic text-end fw-light"
              for="alert-error-email"
            >Enter password
            </p>
          </div>
        </div>

        <div class="d-flex justify-content-between mt-1">
          <!-- remember me -->

        </div>

        <!-- login button -->
        <div class="login text-center mt-2 pt-2">
          <input
            class="btn btn-primary btn-lg"
            id="submitbtn"
            type="submit"
            value="LOGIN"
          />
        </div>

        <!-- sign up -->
        {{!-- <div class="sign-up text-center">
          <a
            class="text-black fw-bold"
            onclick="window.location.href='/register'"
          >Sign Up
          </a>
        </div> --}}
      </form>
    </div>
  </div>
</div>

// button for Homepage
<button
  class="btn btn-primary position-fixed top-0 start-0 m-3"
  onclick="window.location.href='/homepage'"
>
  <i class="fa-solid fa-house"></i> Home
</button>