<div class="login-intranet container-fluid">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
      <!-- logo QSL -->
      <img class="mb-2" src="imgs/qsl-logo.png" alt="logo-QSL" />
      <form id="loginForm" action="/login" method="post">
        <!-- email -->
        <div class="form-floating mt-3">
          <input
            class="form-control"
            id="inputEmail"
            type="email"
            placeholder=""
            name="emailAddress"
          />
          <label for="inputEmail">Email address
            <span class="text-danger">*</span></label>
          <!-- alert error email -->
          <div class="alert">
            <p
              class="emailalert mx-2 text-danger fst-italic text-end"
              for="alert-error-email"
            >Enter email</p>
          </div>
        </div>
        <!-- password -->
        <div class="form-floating mt-1">
          <input
            class="form-control"
            id="inputPassword"
            type="password"
            placeholder=""
            name="password"
          />
          <label for="inputPassword">Password
            <span class="text-danger">*</span></label>
          <!-- alert error password -->
          <div class="alert">
            <p
              class="passwordalert mx-2 text-danger fst-italic text-end"
              for="alert-error-email"
            >Enter password</p>
          </div>
        </div>
        <div class="d-flex justify-content-between mt-1">
          <!-- remember me -->
          <div class="form-check">
            <input
              class="form-check-input"
              id="inputRememberMe"
              type="checkbox"
              value=""
            />
            <label class="form-check-label">Remember me</label>
          </div>
          <!-- show password -->
          <div class="form-check">
            <input
              class="form-check-input"
              id="inputShowPassword"
              type="checkbox"
              value=""
            />
            <label class="form-check-label">Show password</label>
          </div>
        </div>
        <!-- show alert -->
        {{! <div class="sectionforalert">
        </div> }}
        <div class="forgot text-center mt-2 pt-2">
          <!-- login button -->
          <input
            class="btn btn-primary btn-lg"
            id="submitbtn"
            type="submit"
            value="Login"
          />
          <!-- forgot password -->
          <a
            class="d-block small text-body fw-bold mt-3 pt-1 mb-0"
            onclick="window.location.href='/register'"
          >Sign Up</a>
        </div>
      </form>
    </div>
  </div>
</div>