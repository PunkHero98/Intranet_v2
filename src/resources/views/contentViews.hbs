                <span>Back</span>
            </button>
            {{!-- <div class="backButton text-black border">
                <i class="fa-solid fa-left-long"></i>
            </div> --}}
            <div class="slideshow-container position-relative">
                

                {{#if result.content_images.length}}
                    {{#each result.content_images}}
                    <div class="mySlides">
                        <div class="numbertext text-body-tertiary"> {{addindex @index}} / {{@root.total}}</div>
                        <div class="d-flex justify-content-center"><img src={{this}}></div>
                    </div>
                    {{/each}}
                {{else}}
                    <div class="mySlides">
                        <div class="numbertext text-body-tertiary"> 1 / 1</div>
                        <div class="d-flex justify-content-center"><img src='/imgs/qsl-sample-pic.png'</div>
                    </div>
                {{/if}}
                <a class="prev text-decoration-none text-body-tertiary fw-bold" onclick="plusSlides1(-1)">&#10094;</a>
                <a class="next text-decoration-none text-body-tertiary fw-bold" onclick="plusSlides1(1)">&#10095;</a>
            </div>

            <div class="text-center">
                {{#if result.content_images.length}}
                    {{#each result.content_images}}
                    <span class="dot" onclick="currentSlide1({{addindex @index}})"></span>
                    {{/each}}
                {{else}}
                    <span class="dot" onclick="currentSlide1(1)"></span>
                {{/if}}
            </div>

            {{#if result.content_file}}
                <div class="file-container">
                    {{#each result.content_file}}
                    <div class="file-item">
                        <div class="file-icon">
                            <i class="fa-solid {{getFileType this}}"></i>
                        </div>
                        <div class="file-info">
                            <p class="file-name" title="{{this}}">{{truncateFilename this}}</p>
                            <a href="/download?file={{this}}" download class="btn btn-sm btn-outline-primary">Download</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            {{else}}

            {{/if}}


            <h5>{{result.title}}</h5>
            <div class="content_view">
                {{{result.content}}}
            </div>

            <ul class="p-0 list-unstyled m-0">
                <li class="d-inline-block"><a class="text-decoration-none" href="#"><i class="fa fa-user"></i>{{result.poster}}</a></li>
                {{#if result.last_updated}}
                    <li class="d-inline-block"><a class="text-decoration-none" href="#"><i
                            class="fa-solid fa-clock"></i>{{result.last_updated}} - last update</a></li>
                {{else}}
                    <li class="d-inline-block"><a class="text-decoration-none" href="#"><i
                            class="fa-solid fa-clock"></i>{{result.date_time}}</a></li>
                {{/if}}
