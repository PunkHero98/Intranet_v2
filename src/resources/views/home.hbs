  {{!-- Hiển thị phân trang --}}
  <nav aria-label="Page navigation" class="d-flex mt-5 justify-content-center">
    <ul class="pagination m-0">
      <li class="navigation-left"><a class="page-link" href="#"><i class="fa-solid fa-angle-left"></i></a></li>
      {{#for 1 numOfPages}}
      <li class="page-item"><a class="page-link" href="#" data-page={{this}}>{{this}}</a></li>
      {{/for}}
      <li class="navigation-right"><a class="page-link" href="#"><i class="fa-solid fa-angle-right"></i></a></li>
    </ul>
  </nav>

  {{!-- Lọc --}}
  <button type="button" class="filterBtn btn filter-Btn text-white position-fixed translate-middle bg-primary">
    <i class="fa-solid fa-filter"></i>
  </button>

  <div class="gap-1 position-fixed translate-middle filter_container">
    <button class="btn btn-primary" id="btnTimeAsc">Time Increasing</button>
    <button class="btn btn-primary" id="btnTimeDesc">Time Decreasing</button>
    <button class="btn btn-secondary" id="btnAdvanced">Advanced Filter</button>
  </div>
  <form id="advancedFilter" class="advancedFilter_container p-3 border rounded bg-light d-none">
    <!-- Lọc theo Poster -->
    <div class="mb-2 position-relative">
      <label for="posterInput" class="form-label">By Poster:</label>
      <input type="text" id="posterInput" class="form-control" placeholder="Enter Poster name...">

      <ul id="posterList" class="list-group position-absolute w-100" style="display: none; z-index: 10;">
        <li class="list-group-item active" data-value="all">All</li>
      </ul>
    </div>
    <!-- Lọc theo Time -->
    <div class="mb-2">
      <label for="filterTime" class="form-label">By Time:</label>
      <input type="date" id="filterTime" class="form-control">
    </div>

    <!-- Lọc theo Site -->
    <div class="mb-2">
      <label for="filterSite" class="form-label">By Site:</label>
      <select id="filterSite" class="form-select">
        <option value="all">All</option>
        <option value="australia">Australia</option>
        <option value="newzealand">New Zealand</option>
        <option value="thailand">Thailand</option>
        <option value="vietnam">Viet Nam</option>
        <option value="philippines">Philippines</option>
      </select>
    </div>

    <!-- Nút Áp dụng -->
    <div class="d-flex justify-content-between">
      <button class="btn btn-primary mt-2 mx-1" type="submit" id="applyFilter">Apply Filter</button>
      <button class="btn btn-danger mt-2 mx-1" type="reset" id="clearFilter">Clear Filter</button>
    </div>
  </form>

</div>